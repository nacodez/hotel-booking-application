{
  "name": "hotel-booking-server",
  "version": "1.0.0",
  "description": "Hotel booking system backend API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "emulators:start": "node scripts/start-emulators.js",
    "emulators:exec": "firebase emulators:exec",
    "seed:emulator": "node -e \"import('./config/emulator.js').then(m => m.seedEmulatorData())\"",
    "clear:emulator": "node -e \"import('./config/emulator.js').then(m => m.clearEmulatorData())\"",
    "backup:create": "node -e \"import('./utils/backup.js').then(m => new m.BackupService().createFullBackup())\"",
    "backup:restore": "node -e \"console.log('Usage: node -e \\\"import('./utils/backup.js').then(m => new m.BackupService().restoreFromBackup('path/to/backup'))\\\"')\"",
    "migrations:run": "node -e \"import('./utils/backup.js').then(m => new m.MigrationService().runPendingMigrations())\"",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "seed:database": "node scripts/seedDatabase.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "firebase": "^9.17.2",
    "firebase-admin": "^11.5.0",
    "firebase-tools": "^14.7.0",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  },
  "keywords": [
    "hotel",
    "booking",
    "express",
    "firebase",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
